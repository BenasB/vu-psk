@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <FluentLabel Typo="Typography.Header" Color="Color.Fill"><FluentNavLink Href="/">Recipes</FluentNavLink></FluentLabel>
        <FluentSpacer/>
        <FluentStack Width="auto">
            <FluentProfileMenu Initials="AA" />
            <ThemeToggler/>
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        Made for PSK at VU
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
