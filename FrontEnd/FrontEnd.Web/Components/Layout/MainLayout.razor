@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        <FluentLabel Typo="Typography.Header" Color="Color.Fill">
            <FluentNavLink Href="/">Recipes</FluentNavLink>
        </FluentLabel>
        <FluentSpacer />
        <FluentStack Width="auto">
            <AuthorizeView>
                <Authorized>
                    @* Fill in with data from AuthenticationState *@
                    <FluentProfileMenu EMail="" Image="" FullName="" Initials="" ImageSize="" />
                </Authorized>
                <NotAuthorized>
                    <FluentAnchor Appearance="Appearance.Neutral" Href="/login">Log In</FluentAnchor>
                </NotAuthorized>
            </AuthorizeView>
            <ThemeToggler />
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
            <FluentDialogProvider @rendermode="InteractiveServer" />
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        Made for PSK at VU
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>