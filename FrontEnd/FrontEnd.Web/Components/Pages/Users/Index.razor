@page "/users"
@using FrontEnd.Web.Services
@using Identity.Public
@attribute [StreamRendering]
@inject IIdentityService IdentityService

<PageTitle>Users</PageTitle>

<FluentLabel Typo="Typography.H1" MarginBlock="10px">Users</FluentLabel>

<FluentLabel Typo="Typography.Body">This component demonstrates showing data from Users API.</FluentLabel>

@if (_users == null)
{
    <FluentProgressRing />
}
else
{
    <FluentDataGrid Items="_users">
        <PropertyColumn Property="@(u => u.Username)" />
        <TemplateColumn Title="Navigation">
            <FluentNavLink Href=@($"users/{context.Id}") Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Link())" IconColor="Color.Accent" />
        </TemplateColumn>
    </FluentDataGrid>
}

@code {
    private IQueryable<User>? _users;

    protected override async Task OnInitializedAsync()
    {
        var users = await IdentityService.GetAllAsync();
        _users = users.AsQueryable();
    }
}