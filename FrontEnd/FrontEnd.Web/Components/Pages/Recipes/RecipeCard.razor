<FluentNavLink Href=@($"recipes/{Data.Id}") Match="NavLinkMatch.All">
    <!--suppress CssUnresolvedCustomProperty -->
    <FluentCard Width="16rem" Height="17rem" Style="background-color: var(--neutral-layer-1)">
        <img src="@(Data.Image ?? MissingImageUrl)" alt="@Data.Title" style="object-fit: cover; height: 8rem; width: 100%"/>
        <FluentLabel Typo="Typography.Subject" MarginBlock="10px">@Data.Title</FluentLabel>
        <FluentLabel Typo="Typography.Body">@ShortenString(Data.Description, 85)</FluentLabel>
    </FluentCard>
</FluentNavLink>

@code
{
    [Parameter, EditorRequired] public global::Recipes.Public.Recipe Data { get; set; } = default!;
    
    private const string MissingImageUrl = "https://worldfoodtour.co.uk/wp-content/uploads/2013/06/neptune-placeholder-48.jpg";

    private static string? ShortenString(string? value, int maxLength)
    {
        if (value?.Length > maxLength)
            return value[..maxLength] + "...";

        return value;
    }
}