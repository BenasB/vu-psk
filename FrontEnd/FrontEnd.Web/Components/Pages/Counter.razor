@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<FluentLabel Typo="Typography.H1" MarginBlock="10px">Counter</FluentLabel>

<FluentLabel Typo="Typography.Body">Current count: @_currentCount</FluentLabel>

<FluentButton OnClick="IncrementCount">Click me</FluentButton>

@code {
    private int _currentCount = 0;

    private void IncrementCount()
    {
        _currentCount++;
    }

}