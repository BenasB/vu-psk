@page "/users"
@using Identity.Public
@attribute [StreamRendering]
@inject HttpClient HttpClient

<PageTitle>Users</PageTitle>

<FluentLabel Typo="Typography.H1" MarginBlock="10px">Users</FluentLabel>

<FluentLabel Typo="Typography.Body">This component demonstrates showing data from Users API.</FluentLabel>

@if (_users == null)
{
    <FluentProgressRing />
}
else
{
    <FluentDataGrid Items="_users">
        <PropertyColumn Property="@(u => u.Username)" />
    </FluentDataGrid>
}

@code {
    private IQueryable<User>? _users;

    protected override async Task OnInitializedAsync()
    {
        // TODO: Replace this with a Users service
        var users = await HttpClient.GetFromJsonAsync<User[]>("http://localhost:8081/users");
        _users = users?.AsQueryable();
    }
}