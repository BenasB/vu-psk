@page "/users"
@using Identity.Public
@attribute [StreamRendering]
@inject HttpClient HttpClient

<PageTitle>Users</PageTitle>

<h1>Users</h1>

<p>This component demonstrates showing data from Users API.</p>

@if (_users == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Username</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in _users)
        {
            <tr>
                <td>@user.Username</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private User[]? _users;

    protected override async Task OnInitializedAsync()
    {
        // TODO: Replace this with a Users service
        _users = await HttpClient.GetFromJsonAsync<User[]>("http://localhost:8081/users");
    }
}